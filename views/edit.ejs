<%- include('partials/header'); %>

<a class="btn btn-lg add-post" href="/delete/<%= id %>">Delete Post</a>

<h1>Update</h1>
<form action="/edit/<%= id %>" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class='form-control' type="text" name="postTitle" value="<%= title %>" autocomplete="off" autofocus required>
    <label for="postBody">Post</label>
    <textarea class='form-control' name="postBody" rows="5" required><%= body %></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include('partials/footer'); %>
